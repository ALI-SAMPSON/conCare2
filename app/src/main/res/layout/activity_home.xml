<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_dim">

        <!-- Welcome title -->
       <TextView
           android:layout_above="@+id/welcome_msg_sub_text"
            android:id="@+id/welcome_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_msg_home"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/nunito_extrabold"
            android:padding="5dp"
            android:textColor="@color/orange_light"/>

        <!-- theme text -->
        <TextView
            android:layout_above="@+id/text_instruction"
            android:id="@+id/welcome_msg_sub_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_mgs_sub_desc"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="italic"
            app:fontFamily="@font/nunito_extrabold"
            android:padding="5dp"
            android:textColor="@color/orange_light"/>

        <!-- order Now text -->
        <TextView
            android:layout_above="@+id/home_image"
            android:id="@+id/text_instruction"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/order_now"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/nunito_semibold"
            android:padding="5dp"
            android:textColor="@color/status_bar_back"/>

        <!-- content imageView text -->
        <ImageView
            android:id="@+id/home_image"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_bg">
        </ImageView>

        <!--Progress Bar-->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <!--TextInputLayout and LinearLayout
        and spinner View for contraceptive type-->
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/home_image"
            android:id="@+id/textInputLayoutGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:layout_marginStart="0dp">
            <LinearLayout
                android:layout_width="280dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:weightSum="1">
                <!--TextView View  and Spinner View for Voter's Gender-->
               <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewGender"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="@string/gender"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/ic_gender"
                    android:drawablePadding="@dimen/padding_normal"
                    android:textColor="@color/status_bar_back"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1.11"
                    android:drawableStart="@drawable/ic_gender"
                    android:layout_marginStart="1dp" />
                <LinearLayout
                    android:layout_width="170dp"
                    android:orientation="horizontal"
                    android:layout_height="45dp"
                    android:weightSum="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="0dp">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.design.widget.TextInputLayout>

        <!-- Login Image View used as a Button -->
         <ImageView
             android:id="@+id/proceed_Image"
             android:layout_width="65dp"
             android:layout_height="65dp"
             android:layout_margin="10dp"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true"
             android:background="@drawable/circular_button"
             android:scaleType="centerInside"
             android:src="@drawable/ic_send_black_24dp"
             android:onClick="onProceedButtonClick">
         </ImageView>

        <!--Floating action bar -->
       <android.support.design.widget.FloatingActionButton
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/fab"
            android:layout_width="47dp"
            android:layout_height="47dp"
            app:rippleColor="@color/status_bar_back"
            android:src="@drawable/ic_phone"
            android:layout_margin="10dp">
        </android.support.design.widget.FloatingActionButton>

    </RelativeLayout>


    <!--navigation view -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white_dim"
        app:itemTextColor="@color/orange_light"
        app:itemIconTint="@color/orange_light"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>