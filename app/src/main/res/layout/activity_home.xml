<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".activities.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_ui">

        <ImageView
            android:id="@+id/home_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/splash_bg"/>

        <TextView
            android:id="@+id/welcome_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_msg_home"
            android:layout_marginTop="75dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:padding="0dp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_below="@+id/welcome_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_mgs_sub_desc"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="italic"
            android:fontFamily="@font/nunito_extrabold"
            android:padding="5dp"
            android:textColor="@color/materialYellow"/>

        <!-- TextInputLayout and AppCompatEdiText for Tel. Number -->
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/home_imageView"
            android:id="@+id/textInputLayoutTelNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:textAlignment="center"
            android:textColorHint="@color/colorWhite">
            <EditText
                android:id="@+id/editTextTelNumber"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:hint="@string/hint_tel"
                android:drawableLeft="@drawable/ic_format_list_numbered_black_24dp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:inputType="phone"
                android:fontFamily="@font/nunito_semibold"
                android:maxLength="15"
                android:maxLines="1"
                android:layout_marginStart="0dp"
                android:drawableStart="@drawable/ic_format_list_numbered_black_24dp" />
        </android.support.design.widget.TextInputLayout>

        <!--TextInputLayout and LinearLayout and spinner View for user's Campus-->
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/textInputLayoutTelNumber"
            android:id="@+id/textInputLayoutCampus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:layout_marginStart="0dp">
            <LinearLayout
                android:layout_width="320dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:weightSum="1">
                <!--TextView View  and Spinner View for Voter's Gender-->
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewCampus"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="@string/hint_campus"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1.11"
                    android:drawableLeft="@drawable/ic_school_black_24dp"
                    android:layout_marginStart="1dp" />
                <LinearLayout
                    android:layout_width="170dp"
                    android:orientation="horizontal"
                    android:layout_height="45dp"
                    android:weightSum="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerCampus"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.design.widget.TextInputLayout>

        <!--TextInputLayout and LinearLayout and spinner View for user's Location-->
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/textInputLayoutCampus"
            android:id="@+id/textInputLayoutLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:layout_marginStart="0dp">
            <LinearLayout
                android:layout_width="320dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:weightSum="1">
                <!--TextView View  and Spinner View for Voter's Gender-->
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewLocation"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="@string/location"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1.11"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:layout_marginStart="1dp" />
                <LinearLayout
                    android:layout_width="170dp"
                    android:orientation="horizontal"
                    android:layout_height="45dp"
                    android:weightSum="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerLocation"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.design.widget.TextInputLayout>

        <!--TextInputLayout and LinearLayout and spinner View for user's Location-->
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/textInputLayoutLocation"
            android:id="@+id/textInputLayoutResidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:layout_marginStart="0dp">
            <LinearLayout
                android:layout_width="320dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:weightSum="1">
                <!--TextView View  and Spinner View for Voter's Gender-->
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewResidence"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="@string/residence"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1.11"
                    android:drawableLeft="@drawable/ic_my_location_black_24dp"
                    android:layout_marginStart="1dp" />
                <LinearLayout
                    android:layout_width="170dp"
                    android:orientation="horizontal"
                    android:layout_height="45dp"
                    android:weightSum="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerResidence"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.design.widget.TextInputLayout>

        <!--TextInputLayout and LinearLayout and spinner View for contraceptive type-->
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/textInputLayoutResidence"
            android:id="@+id/textInputLayoutGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:layout_marginStart="0dp">
            <LinearLayout
                android:layout_width="320dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:weightSum="1">
                <!--TextView View  and Spinner View for Voter's Gender-->
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewGender"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="@string/gender"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/ic_con_type_black_24dp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1.11"
                    android:drawableStart="@drawable/ic_con_type_black_24dp"
                    android:layout_marginStart="1dp" />
                <LinearLayout
                    android:layout_width="170dp"
                    android:orientation="horizontal"
                    android:layout_height="45dp"
                    android:weightSum="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.design.widget.TextInputLayout>


        <!-- TextInputLayout and AppCompatEdiText for Hostel and room number -->
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/textInputLayoutGender"
            android:id="@+id/textInputLayoutHostel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:textAlignment="center"
            android:textColorHint="@color/colorWhite">
            <EditText
                android:id="@+id/editTextHostel"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:hint="@string/hostel_n_room_number"
                android:drawableLeft="@drawable/ic_hotel_black_24dp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textMultiLine"
                android:layout_marginStart="0dp"
                android:drawableStart="@drawable/ic_hotel_black_24dp" />
        </android.support.design.widget.TextInputLayout>

        <!-- Login Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonLogin"
            android:layout_marginTop="5dp"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_below="@+id/textInputLayoutHostel"
            android:text="@string/place_order"
            android:textColor="@color/pink_ras_berry"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:background="@drawable/round_home_button"
            android:onClick="onPlaceOrderButtonClick" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/nav_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        app:itemTextColor="@color/tart_orange"
        app:itemIconTint="@color/tart_orange"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>