<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".activities.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_snow">

        <!-- container for the edit profile fragment -->
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside">
        </FrameLayout>

         <ImageView
            android:id="@+id/home_imageView"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/con_image"/>

       <TextView
            android:layout_below="@+id/home_imageView"
            android:id="@+id/welcome_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_msg_home"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:padding="5dp"
            android:textColor="@color/colorGray"/>

        <TextView
            android:layout_below="@+id/welcome_msg"
            android:id="@+id/welcome_msg_sub_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_mgs_sub_desc"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="italic"
            android:fontFamily="@font/nunito_extrabold"
            android:padding="5dp"
            android:textColor="@color/status_bar_back"/>


        <TextView
            android:layout_below="@+id/welcome_msg_sub_text"
            android:id="@+id/text_instruction"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/order_now"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/nunito_semibold"
            android:padding="5dp"
            android:textColor="@color/status_bar_back"/>

        <!--TextInputLayout and LinearLayout
        and spinner View for contraceptive type-->
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/text_instruction"
            android:id="@+id/textInputLayoutGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:layout_marginStart="0dp">
            <LinearLayout
                android:layout_width="280dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:weightSum="1">

                <!--TextView View  and Spinner View for Voter's Gender-->
               <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewGender"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="@string/gender"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/ic_con_type_black_24dp"
                    android:textColor="@color/status_bar_back"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1.11"
                    android:drawableStart="@drawable/ic_con_type_black_24dp"
                    android:layout_marginStart="1dp" />
                <LinearLayout
                    android:layout_width="170dp"
                    android:orientation="horizontal"
                    android:layout_height="45dp"
                    android:weightSum="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="0dp">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.design.widget.TextInputLayout>

        <!-- Login Button -->
         <ImageView
            android:layout_below="@+id/textInputLayoutGender"
            android:id="@+id/proceed_Image"
            android:layout_marginTop="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_send_black_24dp"
            android:background="@drawable/circular_button"
            android:onClick="onProceedButtonClick" />

    </RelativeLayout>

    <!--navigation view -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        app:itemTextColor="@color/tart_orange"
        app:itemIconTint="@color/tart_orange"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>