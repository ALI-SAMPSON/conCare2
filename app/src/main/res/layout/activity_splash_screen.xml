<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingLeft="@dimen/spacing_small"
    android:paddingRight="@dimen/spacing_small"
    android:paddingTop="@dimen/spacing_small"
    tools:context=".activities.SplashScreenActivity">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/splash_image"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/splash_screen_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            app:fontFamily="@font/nunito_extrabold"
            android:typeface="sans"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignLeft="@+id/splash_screen_text"
            android:layout_alignStart="@+id/splash_screen_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/app_logo"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignEnd="@+id/splash_screen_text"
            android:layout_alignRight="@+id/splash_screen_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/app_logo"/>

        <TextView
            android:id="@+id/sub_text"
            android:layout_below="@+id/splash_screen_text"
            android:padding="@dimen/spacing_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            app:fontFamily="@font/nunito_semibold"
            android:text="@string/sub_text"
            android:textColor="@color/colorGray"
            android:textStyle="italic"
            android:textSize="20sp"/>


    <TextView
        android:id="@+id/water_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        app:fontFamily="@font/nunito_semibold"
        android:gravity="center_horizontal"
        android:text="@string/watermark"
        android:textColor="@color/colorWhite"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignLeft="@+id/water_mark"
        android:layout_alignStart="@+id/water_mark"
        android:layout_alignParentBottom="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/app_logo"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignEnd="@+id/water_mark"
        android:layout_alignRight="@+id/water_mark"
        android:layout_alignParentBottom="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/app_logo"/>

</RelativeLayout>