<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/con_pic"
    tools:context=".activities.EditProfileActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circularImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:background="@drawable/avatar_placeholder"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorWhite"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

        <!-- TextInputLayout and AppCompatEdiText for Username -->
        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/circularImageView"
            android:id="@+id/username_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:textColorHint="@color/tart_orange">
            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:drawablePadding="@dimen/padding_normal"
                android:textColor="@color/status_bar_back"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColorHint="@color/background_super_dark"
                app:fontFamily="@font/nunito_semibold"
                android:textSize="16sp"
                android:hint="@string/hint_username"
                android:inputType="text"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <!--Save Button-->
    <android.support.v7.widget.AppCompatButton
        android:layout_below="@+id/editTextUsername"
        android:id="@+id/appCompatButtonSave"
        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textAlignment="center"
        android:background="@drawable/round_corner_button_login"
        android:onClick="onSaveButtonClick"/>


</LinearLayout>